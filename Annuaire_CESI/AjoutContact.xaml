<Window x:Class="Annuaire_CESI.AjoutContact"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Annuaire_CESI"
        mc:Ignorable="d"
        Title="AjoutContact" Height="500" Width="400">
    <UniformGrid Rows="11" >
        <Label Content="Nom"></Label>
        <TextBox x:Name="TBNom"></TextBox>
        <Label Content="Prenom"></Label>
        <TextBox x:Name="TBPrenom"></TextBox>
        <Label Content="Service"></Label>
        <TextBox x:Name="TBService"></TextBox>
        <Label Content="Telephone"></Label>
        <TextBox x:Name="TBTelephone"></TextBox>
        <Label Content="Date d'entrée"></Label>
        <DatePicker x:Name="TBDate"></DatePicker>
        
        <UniformGrid Columns="2">
            <Button x:Name="BtnAjout" Content="Ajouter" Click="BtnAjout_Click"></Button>
            <Button x:Name="BtnAnnul" Content="Annuler" Click="BtnAnnul_Click"></Button>
        </UniformGrid>
    </UniformGrid>
</Window>
